{
	"compilerOptions": {
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		},
		"target": "ES2022",
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"jsx": "react-jsx",
		"strict": true,
		"skipLibCheck": true,
		"noEmit": true,
		"types": ["vite/client", "vitest/globals"],
		"allowImportingTsExtensions": true
	},
	"include": ["src", "tailwind.config.cjs"]
}
